select
'INVENTORY' AS 'TYPE', 
istock.ISCODE AS 'ITEM CODE', 
istock.ISDESC AS 'ITEM DESCRIPTION', 
istock.ISCOST AS 'OPD PRICE', 
istock.ISINPATCOST AS 'IPD PRICE', 
istock.ISCOST2 AS 'STAFF PRICE', 
istock.ISREALCOST AS 'COST', 
icat.ICDESC AS 'SERVICE GROUP', 
istock.ISOBSOLETE AS 'ISOBSOLETE'
from istock WITH (NOLOCK)
left join icat WITH (NOLOCK) on icat.ICCODE = istock.ISBCATEGORY
WHERE istock.ISBCATEGORY != '99999'
UNION ALL
select
'SERVICE' AS 'TYPE', 
iservices.ISCODE AS 'ITEM CODE', 
iservices.ISDESC AS 'ITEM DESCRIPTION', 
iservices.ISCOST AS 'OPD PRICE', 
iservices.ISINPATCOST AS 'IPD PRICE', 
iservices.ISCOST2 AS 'STAFF PRICE', 
iservices.ISREALCOST AS 'COST', 
icat.ICDESC AS 'SERVICE GROUP', 
iservices.ISOBSOLETE AS 'ISOBSOLETE'
from iservices WITH (NOLOCK)
left join icat WITH (NOLOCK) on icat.ICCODE = iservices.ISBCATEGORY
WHERE iservices.ISBCATEGORY != '99999'
AND ISORDERSET = 0
UNION ALL
select
'PACKAGE' AS 'TYPE', 
iservices.ISCODE AS 'ITEM CODE', 
iservices.ISDESC AS 'ITEM DESCRIPTION', 
iservices.ISCOST AS 'OPD PRICE', 
iservices.ISINPATCOST AS 'IPD PRICE', 
iservices.ISCOST2 AS 'STAFF PRICE', 
iservices.ISREALCOST AS 'COST', 
icat.ICDESC AS 'SERVICE GROUP', 
iservices.ISOBSOLETE AS 'ISOBSOLETE'
from iservices WITH (NOLOCK)
left join icat WITH (NOLOCK) on icat.ICCODE = iservices.ISBCATEGORY
WHERE iservices.ISBCATEGORY != '99999'
AND ISORDERSETPACKAGE = 1
